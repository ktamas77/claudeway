{
  "name": "claudeway",
  "version": "0.4.0",
  "description": "Slack-to-Claude Code CLI gateway for solo developers",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "slack",
    "claude",
    "claude-code",
    "gateway",
    "cli"
  ],
  "author": "Tamas Kalman",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^4.6.0",
    "dotenv": "^17.3.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
